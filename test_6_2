void check(char* n)
{
	int i = 0;
	int j = 0;
	int m = 0;
	int t = 0;
	int q = 0;
	while (*n != '\0')
	{
		if (*n >= 'a' && *n <= 'z')
		{
			i++;
		}
		else if (*n >= 'A' && *n <= 'Z')
		{
			j++;
		}
		else if (*n >= '0' && *n <= '9')
		{
			m++;
		}
		else if ((*n)==' ')
		{
			t++;
		}
		else
		{
			q++;
		}
		n++;
	}
	printf("小写字母%d个\n大写字母%d个\n数字%d个\n空格%d个\n其他%d个\n",i,j,m,t,q);
}

int main()
{
	char n[20] = { 0 };
	printf("请输入一段字符\n");
	gets(n);
	check(n);
	system("pause");
	return 0;
}
